<resources>


    <style name="AppTheme" parent="Base.Theme.Design"></style>

    <!--Theme.AppCompat.DayNight.NoActionBar-->
    <style name="Base.Theme.Design" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!--menu never 弹出的布局的主题-->
        <item name="popupTheme">@style/App.ToolBar.PopupTheme</item>

        <!-- Customize your theme here. -->
        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--状态栏底色 最顶部，电量等等-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--Activity窗口的颜色 出来状态栏之外所有的部分-->
        <!--<item name="android:windowBackground">@android:color/white</item>-->

        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!--
        各控制元件(如：CheckBox、Switch 或是 RadioButton,RatingBar) 被勾选 (checked)
        或是选定 (selected) 的颜色。-->
        <item name="colorAccent">@android:color/white</item>

        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@android:color/holo_red_light</item>

        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/colorPrimary</item>

        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@android:color/white</item>

        <!--menu overflow icon color -->
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.Icon</item>

        <!--NavigationButtonStyle-->
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>

    </style>


    <!--menu overflow icon color -->
    <style name="ActionButton.Overflow.Icon" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/abc_ic_menu_moreoverflow_mtrl_alpha</item>
    </style>

    <!--NavigationButtonStyle-->
    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--PopupTheme-->
    <style name="App.ToolBar.PopupTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
